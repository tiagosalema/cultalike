enum Permission {
  ADMIN
  USER
  PERMISSION_UPDATE
}

type User {
  id: ID! @unique
  name: String!
  ratedMovies: [RatedMovie]!
    @relation(name: "UserRatedMovie", onDelete: CASCADE)
  email: String!
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission]
}

type Movie {
  id: ID! @unique
  title: String!
  ratedMovie: [RatedMovie]!
}

type RatedMovie {
  id: ID! @unique
  movie: String!
  rate: Int!
  rater: User! @relation(name: "UserRatedMovie", onDelete: SET_NULL)
}
